<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/pageMargin"
    tools:context=".activity.CheckActivity">

    <Button android:text="결제"
        android:id="@+id/pay_btn"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@drawable/button_bg"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/cafe"
        android:textSize="@dimen/default_size">></Button>

    <Button android:text="취소"
        android:id="@+id/cancel_btn"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@drawable/button_pg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/cafe"
        android:textSize="@dimen/default_size"
        android:layout_marginTop="@dimen/pageMargin"></Button>


</LinearLayout>