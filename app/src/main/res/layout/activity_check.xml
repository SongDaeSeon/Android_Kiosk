<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/pageMargin"
    tools:context=".activity.CheckActivity">

    <TextView
        android:id="@+id/university"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe"
        android:text="창원대학교 카페"
        android:textColor="@color/gray"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/kiosk"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe"
        android:text="무인주문단말기"
        android:textColor="#3836B8"
        android:textSize="40dp" />

    <Button android:text="결제"
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_weight="1"
        android:background="@drawable/button_yellow"
        android:textColor="#3836B8"
        android:textStyle="bold"
        android:fontFamily="@font/cafe"
        android:textSize="@dimen/default_size">></Button>

    <Button android:text="취소"
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_weight="1"
        android:background="@drawable/button_purple"
        android:textColor="#ffd400"
        android:textStyle="bold"
        android:fontFamily="@font/cafe"
        android:textSize="@dimen/default_size"
        android:layout_marginTop="@dimen/pageMargin"></Button>


</LinearLayout>